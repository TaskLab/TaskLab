{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "experimentalDecorators": true
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}